<div class="container">
  <div class="row mt-5">
    <div class="col-6 mx-auto">

      <h2><%= @user.name %>さんとのチャット</h2>
      <table class="message table">
        <thead>
          <tr>
            <th style="text-align: left;"><%= current_user.name %></th>
            <th style="text-align: right;"><%= @user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <tbody>
              <tr>
                <th>
                  <p style="text-align: left;"><%= chat.message %></p>
                </th>
              </tr>
            </tbody>
          <% else %>
            <tbody>
              <tr>
                <th>
                  <p style="text-align: right;"><%= chat.message %></p>
                </th>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat do |f| %>
        <%= f.text_field :message, class: "form-control"%>
        <%= f.hidden_field :room_id %>
        <%= f.submit class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>