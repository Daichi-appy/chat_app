<div class="container">
  <div class="row justify-content-center">
    <%# 投稿画面 %>
    <div class="col-3 mt-5">
      <div class="form">
        <%= form_with model: @post, local: true do |f| %>
          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body, "本文" %>
            <%= f.text_area :body, class: "form-control"%>
          </div>
            <%= f.submit "投稿する", class: "btn btn-primary mt-3" %>
        <% end %>
      </div>
    </div>
    <%# 投稿一覧画面 %>
    <div class="col-6 mt-5">
        <div class="index">
          <div>
            <h2 align="center"><%= "投稿一覧　#{@posts.count} posts" %></h2>
          </div>
          <% @posts.each do |p| %>
            <div class="card mb-1">
              <div class="card-body">
                <p class="card-text" id="title">
                  <%= p.title%>
                  <%= link_to "#{p.user.name}", user_path(p.user) %>
                </p>
                <p class="card-text"><%= p.body %></p>
                <p class="card-text">
                  <small class="text-muted">更新日: <%= p.updated_at.strftime("%Y-%m-%d-%H")%></small>
                  <%= link_to "削除", "/posts/#{p.id}", class: "btn btn-danger", method: :delete, data: { confirm: "削除しますか？" }  %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>